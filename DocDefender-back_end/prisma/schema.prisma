generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  admin     Boolean @default(false)
  file File[]
}

model File {
  id        Int     @id @default(autoincrement())
  title     String?
  url       String
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}